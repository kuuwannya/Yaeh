<header>
  <nav class="font-sans bg-white text-center flex justify-between my-4 mx-auto container overflow-hidden">
    <a href="/" class="block text-left">
      <img src="https://stitches.hyperyolo.com/images/logo.png" class="h-10 sm:h-10 rounded-full" alt="logo">
    </a>
    <ul class="text-sm text-gray-700 list-none p-0 flex items-center">
      <li>
        <%= link_to 'Profile', user_path(current_user), class: "inline-block py-2 px-3 text-gray-900 hover:text-gray-700 no-underline" %>
      </li>
      <li>
        <%= link_to 'Post', posts_path, class: "inline-block py-2 px-3 text-gray-900 hover:text-gray-700 no-underline" %>
      </li>
      <li class="pr-2">
        <%= link_to 'Spot', spots_path, class: "inline-block py-2 px-3 text-gray-900 hover:text-gray-700 no-underline" %>
      </li>
      <li class="pl-2 border-l">
        <%= link_to 'Log Out', logout_path, class: "inline-block py-2 px-3 text-gray-900 hover:text-gray-700 no-underline", method: :delete %>
      </li>
      <button class="bg-black hover:bg-text-gray-800 text-white ml-4 py-2 px-3">
        Search Route
      </button>
    </ul>
  </nav>

  <nav class="navbar navbar-expand-lg navigation navbar-light bg-light">

    <%= link_to root_path, class: 'navbar-brand' do %>
      <%#= image_tag 'logo.png' %>
    <% end %>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto main-nav align-items-center">
        <li class="nav-item dropdown dropdown-slide">
          <a href="#" class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="header-profile">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, size: '40x40', class: 'rounded-circle mr15' %>
            <% else %>
              <%= image_tag 'sample.jpg', size: '40x40', class: 'rounded-circle mr15'%>
            <% end %>
          </a>
          <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-item"><%= current_user.name %></div>
            <div class="dropdown-divider"></div>
            <%= link_to 'プロフィール', user_path(current_user), class: 'dropdown-item' %>
          </div>
        </li>
        <li class="nav-item dropdown dropdown-slide">
          <%= link_to 'ログアウト', logout_path, class: 'dropdown-item', method: :delete %>
        </li>
        <li class="nav-item dropdown dropdown-slide">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Map
          </a>

          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to 'スポット検索', root_path, class: 'dropdown-item' %>
            <%= link_to 'ルート検索', user_top_path, class: 'dropdown-item' %>
          </div>
        </li>
        <li class="nav-item dropdown dropdown-slide">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            掲示板
          </a>

          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to '掲示板一覧', posts_path, class: 'dropdown-item' %>
            <%= link_to '掲示板作成', new_post_path, class: 'dropdown-item' %>
          </div>
        </li>

        <li class="nav-item dropdown dropdown-slide">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            ツーリングスポット
          </a>

          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to 'スポット一覧', spots_path, class: 'dropdown-item' %>
            <%= link_to 'スポット作成', new_spot_path, class: 'dropdown-item' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
