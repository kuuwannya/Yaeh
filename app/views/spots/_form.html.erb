<%= form_with model: spot, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
