<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%#= image_tag 'board_placeholder.png', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <ul class="list-inline">
          <li class="list-inline-item">
            <%#= icon 'far', 'user' %>
            <%= post.user.name %>
          </li>
          <li class="list-inline-item">
            <%= post.spot.name %>
          </li>
          <li class="list-inline-item">
            <%= l post.touring_date, format: :short %>
          </li>
        </ul>
        <% if post.images.attached? %>
          <div>
            <p>Images:</p>
            <% post.images.each do |image| %>
            <%= image_tag image, width: 300, height: 200 %>
            <% end %>
          </div>
        <% end %>
        <h4>
          <%= link_to post.content, post_path(post), class: 'card-text' %>
        </h4>
        <%= render 'posts/crud_menus' , post: post if current_user.own?(post) %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%#= icon 'far', 'calendar' %>
            <%= l post.created_at, format: :long %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
