<div class="container pt-3">
  <div class="row">
    <div>
      <p>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, size: '40x40', class: 'rounded-circle mr15' %>
        <% else %>
          <%= image_tag 'sample.jpg', size: '40x40', class: 'rounded-circle mr15'%>
        <% end %>
      </p>
      <h1 class="float-left mb-5"><%= current_user.name %></h1>
    </div>
    <div class="col-md-10 offset-md-1">
      <%= link_to edit_user_path(current_user), id: "button-edit-#{current_user.id}" do %>
        <%= icon 'fa', 'pen' %>
      <% end %>
      <%#= link_to t('.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <%= current_user.profile %>
    </div>

    <div>
      <p><%= current_user.email %></p>
    </div>
  </div>
</div>
