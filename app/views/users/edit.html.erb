<section class="">
  <div class=" items-center px-5 py-12 lg:px-20">
    <div class="flex flex-col w-full max-w-md p-10 mx-auto my-6 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
      <div class="mt-8">
        <div class="mt-6">
          <%= form_with model: @user, local: true, url: user_path, class: "space-y-6" do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            <div>
              <%= f.label :name %>
              <div class="mt-1">
                <%= f.text_field :name, class: "block w-full px-5 py-3 mb-4 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500", placeholder: "Your Account Name" %>
              </div>
            </div>
            <div>
              <%= f.label :email, User.human_attribute_name(:email)%>
              <div class="mt-1">
                <%= f.email_field :email, class: "block w-full px-5 py-3 mb-4 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500", placeholder: "Your Email" %>
              </div>
            </div>
            <div class="space-y-1">
              <%= f.label :avatar %>
              <div class="mt-1">
                <%= f.file_field :avatar, class: "block w-full px-5 py-3 mb-4 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500", onchange: 'previewImage()' %>
                <%= f.hidden_field :avatar_cache %>
                <% if @user.avatar.attached? %>
                  <% @user.avatar.purge %>
                <% end %>
              </div>
            </div>
            <div class="space-y-1">
              <%= f.label :profile %>
              <div class="mt-1">
                <%= f. text_area :profile, class: "block w-full px-5 py-3 mb-4 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:border-transparent focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-300 border-gray-500" %>
              </div>
            </div>
            <div class="space-y-1">
              <%= f.label :bike %>
              <div class="mt-1">
                <%= f.collection_check_boxes(:users_bike_ids, @bikes, :id, :name) do |bike| %>
                  <%= bike.label do %>
                    <%= bike.check_box + bike.text  %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div>
              <%= f.submit 'Resister', class: "flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 border-gray-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
